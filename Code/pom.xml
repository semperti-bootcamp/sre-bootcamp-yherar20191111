    <modelVersion>4.0.0</modelVersion>
	
    
    <scm>
       <connection>scm:hg:https://github.com/semperti-bootcamp/sre-bootcamp-yherar-11-11-2019.git</connection>
       <url>scm:hg:https://github.com/semperti-bootcamp/sre-bootcamp-yherar-11-11-2019.git</url>
       <developerConnection>scm:hg:https://github.com/semperti-bootcamp/sre-bootcamp-yherar-11-11-2019.git</developerConnection>
       <tag>journals-10.2</tag>
